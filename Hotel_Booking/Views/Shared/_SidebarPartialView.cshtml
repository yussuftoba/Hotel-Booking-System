<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		min-height: 100vh;
		overflow-x: hidden;
	}

	.sidebar {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(20px);
		border-right: 1px solid rgba(255, 255, 255, 0.2);
		min-height: 100vh;
		color: white;
		position: fixed;
		top: 0;
		left: 0;
		width: 280px;
		z-index: 1000;
		transition: transform 0.3s ease;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

		.sidebar::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #764ba2 100%);
			opacity: 0.9;
			z-index: -1;
		}

	.brand-section {
		padding: 2rem 1.5rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		margin-bottom: 1rem;
	}

	.brand-logo {
		width: 50px;
		height: 50px;
		background: linear-gradient(135deg, #ff6b6b, #ee5a24);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
	}

	.brand-text {
		font-size: 1.5rem;
		font-weight: 700;
		letter-spacing: -0.5px;
	}

	.brand-subtitle {
		font-size: 0.875rem;
		opacity: 0.7;
		margin-top: 0.25rem;
	}

	.nav-section {
		padding: 0 1.5rem;
	}

	.nav-title {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		opacity: 0.6;
		margin-bottom: 1rem;
		padding-left: 0.5rem;
	}

	.sidebar .nav-link {
		color: rgba(255, 255, 255, 0.8);
		border-radius: 12px;
		margin: 0.25rem 0;
		padding: 0.875rem 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		align-items: center;
		text-decoration: none;
		position: relative;
		overflow: hidden;
		font-weight: 500;
	}

		.sidebar .nav-link::before {
			content: '';
			position: absolute;
			top: 0;
			left: -100%;
			width: 100%;
			height: 100%;
			background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
			transition: left 0.5s;
		}

		.sidebar .nav-link:hover::before {
			left: 100%;
		}

		.sidebar .nav-link:hover {
			background: rgba(255, 255, 255, 0.15);
			color: white;
			transform: translateX(8px) scale(1.02);
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		}

		.sidebar .nav-link.active {
			background: rgba(255, 255, 255, 0.2);
			color: white;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
			transform: translateX(4px);
		}

		.sidebar .nav-link i {
			width: 24px;
			text-align: center;
			margin-right: 0.75rem;
			font-size: 1.1rem;
		}

	.logout-section {
		position: absolute;
		bottom: 2rem;
		left: 1.5rem;
		right: 1.5rem;
	}

	.logout-link {
		background: rgba(255, 107, 107, 0.2);
		border: 1px solid rgba(255, 107, 107, 0.3);
		color: #ff6b6b !important;
		font-weight: 600;
	}

		.logout-link:hover {
			background: rgba(255, 107, 107, 0.3);
			color: white !important;
			border-color: rgba(255, 107, 107, 0.5);
		}

</style>

<div class="col-md-2 p-0">
	<div class="sidebar" id="sidebar">
		<div class="brand-section">
			<div class="brand-logo">
				<i class="bi bi-building"></i>
			</div>
			<div class="brand-text">Admin Panel</div>
			<div class="brand-subtitle">Management System</div>
		</div>

		<div class="nav-section">
			<div class="nav-title">Main Navigation</div>
			<nav class="nav flex-column">
				<a class="nav-link active" href="@Url.Action("Dashboard","AdminRole")" onclick="setActive(this)">
					<i class="bi bi-speedometer2"></i>
					Dashboard
				</a>
				<a class="nav-link" href="@Url.Action("ShowHotels","AdminRole")" onclick="setActive(this)">
					<i class="bi bi-building"></i>
					Hotels
				</a>
				<a class="nav-link" href="@Url.Action("ShowBookings","AdminRole")" onclick="setActive(this)">
					<i class="bi bi-calendar-check"></i>
					Bookings
				</a>
				<a class="nav-link" href="@Url.Action("ShowUsers","AdminRole")" onclick="setActive(this)">
					<i class="bi bi-people"></i>
					Users
				</a>
				<a class="nav-link" href="@Url.Action("GetUserProfile", "Account")" onclick="setActive(this)">
					<i class="bi bi-people"></i>
					My Profile
				</a>
			</nav>
		</div>

		<div class="logout-section">
			<a class="nav-link logout-link" href="@Url.Action("LogOut", "Account")">
				<i class="bi bi-box-arrow-right"></i>
				Logout
			</a>
		</div>
	</div>
</div>
<script>
	function toggleSidebar() {
		const sidebar = document.getElementById('sidebar');
		sidebar.classList.toggle('active');
	}

	function setActive(element) {
		// Remove active class from all nav links
		document.querySelectorAll('.nav-link').forEach(link => {
			link.classList.remove('active');
		});

		// Add active class to clicked element (unless it's logout)
		if (!element.classList.contains('logout-link')) {
			element.classList.add('active');
		}
	}

</script>
