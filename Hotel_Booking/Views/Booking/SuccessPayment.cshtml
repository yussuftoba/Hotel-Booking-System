@{
    ViewBag.Title = "Booking Confirmed";
}

<div class="container mt-5 text-center">
    <div class="alert alert-success shadow p-5 rounded">
        <h2 class="mb-3"><i class="bi bi-check-circle-fill text-success me-2"></i>Booking Confirmed!</h2>
        <p class="lead">Thank you for your reservation. A confirmation email has been sent to your inbox.</p>
        <a href="@Url.Action("GetProfileHistory", "UserHistory")" class="btn btn-primary mt-3">
            <i class="bi bi-house-door-fill me-1"></i> Back to Booking History
        </a>
    </div>
</div>
